<section class="my-5">
    <div class="container">
        <form action="" id="checkout-form">
            <div class="row">
                <div class="form-group col-md-6">
                    <h2>Enter Delivery Details</h2>
                    <div class="my-3">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="123 street" required>
                    </div>
                    <div class="my-3">
                        <label for="pincode">Pincode</label>
                        <input type="text" class="form-control" id="pincode" name="pincode" required>
                    </div>
                    <div class="my-3">
                        <label for="mobile"> Mobile</label>
                        <input type="text" class="form-control" id="mobile" name="mobile"required>
                    </div>
                    <input type="text" name="userId" value="{{user._id}}" hidden>
                </div>
                <div class="col-md-4">
                    <div class="card checkout-card my-5 ml-5 p-4" style="border: 1px solid #ddd;">
                        <h5 class="mb-3">Total amount Rs.<span class="text-success">{{total}}</span> </h5>
                        <hr>
                        <h6 class="mb-3">Payment Method</h6>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="payment-method" value="COD" id="cod" checked>
                            <label class="form-check-label" for="cod">COD</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="payment-method" value="ONLINE" id="online">
                            <label class="form-check-label" for="online">Online Payment</label>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Confirm order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    $("#checkout-form").submit((e)=>{
       e.preventDefault()
       $.ajax({
        url:'/place-order',
        method:'post',
        data:$('#checkout-form').serialize(),
        success:(response)=>{
            alert("Order Placed")
            if(response.status){
                location.href='/order-success'
            }
        }
       })
    })
</script>